<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <style>
      .flash-message {
        display: none;
        position: absolute;
        top: 10px;
        left: 50%;
        transform: translateX(-50%);
        padding: 10px 20px;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
        animation: fadeOut 5s ease-in-out;
      }
      .flash-success {
        background-color: #28a745;
        color: white;
      }
      .flash-error {
        background-color: #dc3545;
        color: white;
      }
      @keyframes fadeOut {
        0% {
          opacity: 1;
        }
        80% {
          opacity: 1;
        }
        100% {
          opacity: 0;
          display: none;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a
          class="navbar-brand"
          href="/"
          >User Dashboard</a
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse"
          id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if (user) { %>
            <li class="nav-item">
              <span class="nav-link text-white"
                >Welcome, <%= user.username %>!</span
              >
            </li>
            <li class="nav-item">
              <a
                href="/logout"
                class="nav-link btn btn-danger text-white px-3"
                >Logout</a
              >
            </li>
            <% } else { %>
            <li class="nav-item">
              <a
                href="/userLogin"
                class="nav-link btn btn-primary text-white px-3"
                >Login</a
              >
            </li>
            <li class="nav-item">
              <a
                href="/userRegister"
                class="nav-link btn btn-success text-white px-3"
                >Register</a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if (error) { %>
    <div class="flash-message flash-error"><%= error %></div>
    <% } %> <% if (success) { %>
    <div class="flash-message flash-success"><%= success %></div>
    <% } %>

    <!-- Main Content -->
    <div class="container mt-5">
      <h1 class="text-center">Welcome to the User Dashboard</h1>
      <div class="text-center mt-4">
        <% if (!user) { %>
        <a
          href="/userLogin"
          class="btn btn-primary"
          >Login</a
        >
        <a
          href="/userRegister"
          class="btn btn-success"
          >Register</a
        >
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Show flash message only if it exists
      document.addEventListener('DOMContentLoaded', function () {
        let flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(msg => {
          if (msg.textContent.trim() !== '') {
            msg.style.display = 'block';
            setTimeout(() => {
              msg.style.display = 'none';
            }, 5000);
          }
        });
      });
    </script>
  </body>
</html>
